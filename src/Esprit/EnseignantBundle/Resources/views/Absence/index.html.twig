{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Absence list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Anneedeb</th>
                <th>Datesaisie</th>
                <th>Remarque</th>
                <th>Semestre</th>
                <th>Justifier</th>
                <th>Heureabsence</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('absence_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.anneeDeb %}{{ entity.anneeDeb|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.dateSaisie %}{{ entity.dateSaisie|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.remarque }}</td>
                <td>{{ entity.semestre }}</td>
                <td>{{ entity.justifier }}</td>
                <td>{{ entity.heureAbsence }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('absence_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('absence_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('absence_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
